{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "outDir": "build",
        "removeComments": false,
        "preserveConstEnums": true,
        "strict": true,
        "sourceMap": false,
        "target": "es2015",
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "importHelpers": true
    },
    "include": [
        "lib/**/*",
    ]
}

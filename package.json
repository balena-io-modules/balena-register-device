{
  "name": "balena-register-device",
  "version": "6.1.6",
  "description": "Balena device registration utilities",
  "main": "build/register.js",
  "homepage": "https://github.com/balena-io-modules/balena-register-device",
  "repository": {
    "type": "git",
    "url": "git://github.com/balena-io-modules/balena-register-device.git"
  },
  "files": [
    "build/"
  ],
  "keywords": [
    "resin",
    "balena",
    "device",
    "register"
  ],
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "build": "npx tsc",
    "lint": "balena-lint -e js --typescript lib tests",
    "lint-fix": "balena-lint -e js --typescript --fix lib tests",
    "test-node": "npx mocha --reporter spec tests/**/*.spec.js",
    "test-browser": "mockttp -c karma start",
    "pretest": "npm run build",
    "test": "npm run test-node && npm run test-browser",
    "posttest": "npm run lint",
    "prepare": "npm run build"
  },
  "author": "Juan Cruz Viotti <juan@resin.io>",
  "license": "Apache-2.0",
  "devDependencies": {
    "@balena/lint": "^5.1.0",
    "balena-config-karma": "^2.3.1",
    "balena-request": "^10.0.9",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "karma": "^1.7.0",
    "lodash": "^4.0.0",
    "mocha": "^6.2.0",
    "mockttp": "^0.8.0",
    "sinon": "^1.17.6"
  },
  "dependencies": {
    "@types/bluebird": "^3.5.32",
    "@types/randomstring": "^1.1.6",
    "bluebird": "^3.7.2",
    "randomstring": "^1.1.5",
    "typed-error": "^2.0.0"
  },
  "peerDependencies": {
    "balena-request": "^10.0.0"
  }
}
